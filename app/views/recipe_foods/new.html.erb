<h1 class="text-center mb-5">Add Food item</h1>

<%= form_with(model: @recipe_food, method: :post) do |form| %>
  <div class="field">
    <%= form.label :recipe_id %>
    <%= form.select :recipe_id, @recipes.map { |recipe_item| [recipe_item.name, recipe_item.id] } %>
  </div>

  <div class="field">
    <%= form.label :food_id, style: "display: block", class: "label" %>
    <%= form.select :food_id, @foods.map { |food| [food.name, food.id] } %>
  </div>

  <div class="field">
    <%= form.label :quantity, style: "display: block", class: "label" %>
    <%= form.number_field :quantity, required: true, class:"input" %>
  </div>

  <div>
    <%= form.submit class: "btn-submit" %>
  </div>
<% end %>
