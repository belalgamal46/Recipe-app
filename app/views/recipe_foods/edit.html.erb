<h1 class="text-center mb-5">Edit Food item</h1>

<%= form_with(model: @recipe_food,class: "container", method: :put) do |form| %>
  <div class="field">
    <%= form.label :recipe_id, style: "display: block", class: "label" %>
    <%= form.select :recipe_id, @recipes.map { |recipe| [recipe.name, recipe.id] } %>
  </div>

  <div class="field">
    <%= form.label :food_id, style: "display: block", class: "label" %>
    <%= form.select :food_id, @foods.map { |food| [food.name, food.id] } %>
  </div>

  <div class="field">
    <%= form.label :quantity, style: "display: block", class: "label" %>
    <%= form.number_field :quantity, required: true, class:"input" %>
  </div>

  <div>
    <%= form.submit "Save Edit", class: "btn btn-primary" %>
  </div>
<% end %>