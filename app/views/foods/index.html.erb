<div class="d-flex justify-content-end mb-3">
  <%= link_to "Add Food", new_food_path, class: "btn btn-primary float-right" %>
</div>

<div class="text-center">
  <table class="table table-striped custom-table">
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price&nbsp;$</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.price %></td>
          <td>
            <%= button_to "Delete", food, method: :delete, data: { confirm: "Are you sure you want to delete this food?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
