<header>
  <nav class="navbar navbar-expand-lg bg-body-tertiary bg-secondary">
    <div class="container-fluid">
      <%= link_to "Recipe App",  root_path, class: "navbar-brand text-white" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Foods", foods_path, class: "nav-link active text-white" %>
          </li>
          <li class="nav-item">
            <%= link_to "Recipes", main_recipes_path, class: "nav-link active text-white" %>
          </li>
          <li class="nav-item dropdown">
            <%= link_to "Public Recipes", public_recipes_path, class: "nav-link active text-white" %>
          </li>
          <li class="nav-item">
            <%= link_to "Shopping list", general_shopping_lists_path, class: "nav-link active text-white" %>
          </li>
        </ul>
        <% if user_signed_in?%>
          <div class="d-flex align-items-center gap-3">
            <p class="m-0 text-white">Logged in as <%= current_user.email %></p>
            <%= button_to "Log out", destroy_user_session_path, method: :delete %>
          </div>
        <%else%>
          <%= link_to "Log in", new_user_session_path %> |
          <%= link_to "Sign up", new_user_registration_path %>
        <%end%>
      </div>
    </div>
  </nav>
</header>